<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <com.tencent.rtmp.ui.TXCloudVideoView
            android:id="@+id/cloud_video_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"/>

    <com.cm.media.ui.widget.player.controller.TCVodControllerSmall
            android:id="@+id/controller_small"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

    <com.cm.media.ui.widget.player.controller.TCVodControllerLarge
            android:id="@+id/controller_large"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    <View
            android:id="@+id/danmaku_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

    <com.cm.media.ui.widget.player.controller.TCVodControllerFloat
            android:id="@+id/controller_float"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

</RelativeLayout>